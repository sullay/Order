.app {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  height: 1000rpx;
}
.app .restaurantList {
  background: #f6f8fa;
  width: 700rpx;
  height: 500rpx;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-template-rows: repeat(3, 1fr);
  grid-template-areas: 'r1 r2 r3' 'r8 b r4' 'r7 r6 r5';
  gap: 20rpx;
}
.app .restaurantList .restaurant {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  border-radius: 10rpx;
  border: 3rpx solid #F80;
  animation: namemf 1s linear infinite alternate;
  -webkit-animation: namemf 3s linear infinite alternate;
  background: #f2f8fe;
}
.app .restaurantList .restaurant input {
  text-align: center;
}
.app .restaurantList .restaurant:nth-of-type(4) {
  grid-area: r4;
}
.app .restaurantList .restaurant:nth-of-type(5) {
  grid-area: r5;
}
.app .restaurantList .restaurant:nth-of-type(6) {
  grid-area: r6;
}
.app .restaurantList .restaurant:nth-of-type(7) {
  grid-area: r7;
}
.app .restaurantList .restaurant:nth-of-type(8) {
  grid-area: r8;
}
.app .restaurantList .active {
  background: -webkit-linear-gradient(bottom, #FEAC5E, #4BC0C8);
  background: linear-gradient(to top, #FEAC5E, #4BC0C8);
}
.app .restaurantList .run_btn {
  grid-area: b;
  width: 150rpx;
  height: 150rpx;
  background: -webkit-linear-gradient(bottom, #FEAC5E, #4BC0C8);
  background: linear-gradient(to top, #FEAC5E, #4BC0C8);
  justify-self: center;
  align-self: center;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  border-radius: 50%;
  color: white;
  font-size: 1rem;
}
@-webkit-keyframes namemf {
from {
    border: 3rpx solid #F80;
}
to {
    border: 3rpx solid #2ED;
}
}
@keyframes namemf {
from {
    border: 3rpx solid #F80;
}
to {
    border: 3rpx solid #2ED;
}
}

